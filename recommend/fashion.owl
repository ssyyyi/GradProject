@prefix ex: <http://example.org/fashion#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

ex:FashionOntology rdf:type owl:Ontology .

# Clothing Categories (현재 상의만 존재)
ex:ClothingItem rdf:type owl:Class .
ex:Top rdf:type owl:Class ; rdfs:subClassOf ex:ClothingItem .

# Styles (10개 스타일)
ex:Style rdf:type owl:Class .
ex:Traditional rdf:type owl:Class ; rdfs:subClassOf ex:Style .
ex:Manish rdf:type owl:Class ; rdfs:subClassOf ex:Style .
ex:Feminine rdf:type owl:Class ; rdfs:subClassOf ex:Style .
ex:Ethnic rdf:type owl:Class ; rdfs:subClassOf ex:Style .
ex:Contemporary rdf:type owl:Class ; rdfs:subClassOf ex:Style .
ex:Natural rdf:type owl:Class ; rdfs:subClassOf ex:Style .
ex:Genderless rdf:type owl:Class ; rdfs:subClassOf ex:Style .
ex:Sporty rdf:type owl:Class ; rdfs:subClassOf ex:Style .
ex:Subculture rdf:type owl:Class ; rdfs:subClassOf ex:Style .
ex:Casual rdf:type owl:Class ; rdfs:subClassOf ex:Style .

# Situations (추천 상황 4개)
ex:Situation rdf:type owl:Class .
ex:CasualMeeting rdf:type owl:Class ; rdfs:subClassOf ex:Situation .
ex:FormalEvent rdf:type owl:Class ; rdfs:subClassOf ex:Situation .
ex:Sports rdf:type owl:Class ; rdfs:subClassOf ex:Situation .
ex:Date rdf:type owl:Class ; rdfs:subClassOf ex:Situation .


# 계절 개념 유지
ex:Season rdf:type owl:Class .
ex:SpringAutumn rdf:type owl:Class ; rdfs:subClassOf ex:Season .
ex:Summer rdf:type owl:Class ; rdfs:subClassOf ex:Season .
ex:Winter rdf:type owl:Class ; rdfs:subClassOf ex:Season .

# 온도와 계절을 연결하는 관계
ex:suitableForSeason rdf:type owl:ObjectProperty ; 
    rdfs:domain ex:ClothingItem ; 
    rdfs:range ex:Season .


# Properties
ex:suitableForStyle rdf:type owl:ObjectProperty ; rdfs:domain ex:ClothingItem ; rdfs:range ex:Style .
ex:suitableForSituation rdf:type owl:ObjectProperty ; rdfs:domain ex:ClothingItem ; rdfs:range ex:Situation .
ex:suitableForWeather rdf:type owl:ObjectProperty ; rdfs:domain ex:ClothingItem ; rdfs:range ex:WeatherCondition .

# Styles and Situations Mapping (스타일과 상황 연결 1:N)
ex:CasualMeeting ex:suitableForStyle ex:Casual .
ex:CasualMeeting ex:suitableForStyle ex:Natural .
ex:CasualMeeting ex:suitableForStyle ex:Genderless .
ex:CasualMeeting ex:suitableForStyle ex:Contemporary .

ex:FormalEvent ex:suitableForStyle ex:Traditional .
ex:FormalEvent ex:suitableForStyle ex:Manish .
ex:FormalEvent ex:suitableForStyle ex:Feminine .
ex:FormalEvent ex:suitableForStyle ex:Contemporary .

ex:Sports ex:suitableForStyle ex:Sporty .
ex:Sports ex:suitableForStyle ex:Casual .

ex:Date ex:suitableForStyle ex:Feminine .
ex:Date ex:suitableForStyle ex:Contemporary .
ex:Date ex:suitableForStyle ex:Ethnic .
ex:Date ex:suitableForStyle ex:Subculture .

